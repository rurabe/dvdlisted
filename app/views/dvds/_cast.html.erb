<% if @dvd.director %>
	<h3>Director</h3>
	<ul>
		<li>
			<%= link_to @dvd.director.full_name, director_path(@dvd.director) %>
			<%= link_to role_path(:dvd_id => @dvd.id, 
														:person_id => @dvd.director.id, 
														:role_type => 'director'), 
									:method => "delete",
									:data => {:confirm => "Are you sure?"}  do %>
				<i class="icon-remove icon-white"></i>
			<% end %>
		</li>
	</ul>
<% end %>

<% if !@dvd.actors.empty? %>
	<h3>Actors</h3>
	<ul>
		<% @dvd.actors.each do |actor| %>
				<li>
					<%= link_to actor.full_name, actor_path(actor) %>
					<%= link_to role_path(:dvd_id => @dvd.id, 
																:person_id => actor.id, 
																:role_type => 'actor'), 
											:method => "delete",
											:data => {:confirm => "Are you sure?"}  do %>
						<i class="icon-remove icon-white"></i>
					<% end %>
				</li>
		<% end %>
	</ul>
<% end %>