<h3><%= @person.first_name %>'s Movies</h3>
	
<% if !@person.dvds_as_a_director.empty? %>
	<h4>Directing</h4>
	<ul>
		<% @person.dvds_as_a_director.each do |dvd| %>
			<li> 
				<%= link_to dvd.name, dvd %>
				<%= link_to role_path(:dvd_id => dvd.id, 
											:person_id => @person.id, 
											:role_type => 'director'), 
										:method => "delete",
										:data => {:confirm => "Are you sure?"} do %>
					<i class="icon-remove icon-white"></i>
				<% end %>
			 </li>
		<% end %>
	</ul>
<% end %>

<% if !@person.dvds_as_an_actor.empty? %>
	<h4>Acting</h4>
	<ul>
		<% @person.dvds_as_an_actor.each do |dvd| %>
			<li> 
				<%= link_to dvd.name, dvd %> 
				<%= link_to role_path(:dvd_id => dvd.id, 
															:person_id => @person.id, 
															:role_type => 'actor'), 
										:method => "delete",
										:data => {:confirm => "Are you sure?"}  do %>
					<i class="icon-remove icon-white"></i>
				<% end %>
			</li>
		<% end %>
	</ul>
<% end %>

