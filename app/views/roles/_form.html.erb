<%= form_for @role, :url => {:controller => "roles", :action => "create"} do |f| %>
	<%= f.collection_select(:person_id, Person.order(:first_name), :id, :full_name, 
												:include_blank => true )%>
	<%= f.hidden_field :dvd_id, :value => dvd.id %>
	<%= f.hidden_field :role_type, :value => type %>
	<%= f.submit "select", :class => "btn btn-small btn-info" %> or <%= link_to "New #{type}", '#', :class => 'btn btn-small btn-info', :id => "new-#{type}" %>
<% end %>
